{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/ko", "destination": "/ko/index.html" },
    { "source": "/en", "destination": "/en/index.html" },
    { "source": "/es", "destination": "/es/index.html" },
    { "source": "/pt", "destination": "/pt/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
